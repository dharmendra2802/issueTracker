<%- include('__navbar.ejs') %>

<div class="container-fluid pt-4">

  <!-- section to contain filter options -->
    <div class="row px-2 pb-2 border-3 border-bottom ">   
        <%- include('__filter.ejs') %>            
    </div>

    <div class="row">
        <!-- side labels -->
        <div class="col-2 border-3 border-black-50   border-end style-4" style="overflow-y: auto; height:420px">
            <p class="pt-2 fs-4 fw-medium ">Labels</p>
           <form action="/user/page/projectPage/?" method="get">
            <% for(p of project.labels){ %>  
              <div class="form-check mb-1">
                  <input class="form-check-input" type="checkbox" value="<%= p %>" id="<%= p %>" name="labels">
                  <label class="form-check-label" for="<%= p %>" >
                    <%= p %>
                  </label>
              </div>
            <% } %>
            <input type="hidden" name="id" value="<%= project.id %>">
            <button type="submit" class="btn btn-outline-success mt-4">Search</button>
          </form>
        </div>

        <!-- bugs -->
        <div class="mx-2 mt-2 accordion col-9 style-4" id="accordionExample" style="overflow-y: auto; height:400px">
            <%- include('__bugs.ejs') %>
            
        </div>

    </div>

</div>

